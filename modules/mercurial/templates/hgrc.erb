traceback = True

[extensions]
share=
rebase=
mq=
purge=
<% if scope.lookupvar('::operatingsystem') != 'windows' -%>
bundleclone=<%=scope.lookupvar('mercurial::settings::hgext_dir')%>/bundleclone.py

[bundleclone]
# NB - this may be updated by runner to prefer the local AWS region
prefers = ec2region=us-west-2, stream=revlogv1
<% end -%>

