transforms:
  - env
  - hostcredentials
  - secrets
config:
  credentials:
    $hostcredentials:
<% @tc_host_secrets_servers.uniq.each do |server| -%>
    - http://<%= server %>/v1/credentials
<% end -%>
  engine:           native
  engines:
    native:
      createUser: false
  plugins:
    disabled: []
    artifacts: {}
    livelog: {}
    success: {}
    reboot:
      maxLifeCycle: '96 hours'
      allowTaskReboots: true
    # tasks can never take more than 96 hours (but typically are limited by their own maxRunTime)
    maxruntime:
      maxRunTime: '96 hours'
      perTaskLimit: allow
    watchdog: {}
    logprefix:
      hostname: <%= scope.lookupvar('::fqdn') %>
      workerType: <%= @taskcluster_worker_type %>
      workerGroup:  <%= @taskcluster_worker_group %>
    env:
      extra:
<% if @operatingsystem == 'Darwin' -%>
        PATH: "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
        # we probably don't need the remainder
        TMPDIR: {$env: TMPDIR}
        SHELL: '/bin/bash'
        LANG: 'en_US.UTF-8'
        LC_ALL: 'en_US.UTF-8'
        XPC_FLAGS: '0x0'
        XPC_SERVICE_NAME: '0'
<% else -%>
        PATH: /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/bin/X11
        DISPLAY: {$env: DISPLAY}
        XDG_SESSION_ID: {$env: XDG_SESSION_ID}
        XDG_RUNTIME_DIR: {$env: XDG_RUNTIME_DIR}
<% end -%>
  queueBaseUrl:     https://queue.taskcluster.net/v1
  worker:
    provisionerId:    releng-hardware
    workerType :      <%= @taskcluster_worker_type %>
    workerGroup:      <%= @taskcluster_worker_group %>
    workerId:         <%= @hostname %>
    pollingInterval:  10
    reclaimOffset:    120
    minimumReclaimDelay: 30
    concurrency: 1
  temporaryFolder:  /var/tmp/tc-worker-tmp
  webHookServer:
    provider: localhost
  minimumDiskSpace:   10000000  # 10 GB
  minimumMemory:      1000000   # 1 GB
  monitor:
    project: taskcluster-worker
    logLevel: info
