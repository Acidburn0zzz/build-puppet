version: '3.5'

services:
  redis:
    image: redis:3.2

  web:
    image: "mozillarelops/roller:<%= @image_tag %>"
    build:
      context: /opt/rollerdev
    depends_on:
      - redis
    ports:
      - "<%= @port %>:<%= @port %>"
    environment:
      - DJANGO_CONFIGURATION=Dev
    env_file:
      - .env
    volumes:
      - /opt/rollerdev:/app
    command: web-dev

  worker:
    image: "mozillarelops/roller:<%= @image_tag %>"
    build:
      context: /opt/rollerdev
    environment:
      - WORKER_CONFIG_PATH=/run/worker_config.json
    env_file:
      - .env
    volumes:
      - /opt/rollerdev:/app
      - ./worker_config.json:/run/worker_config.json:ro
    command: watch-worker-purge

  ssl:
    image: nginx:latest
    depends_on:
      - web
    ports:
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/nginx.conf
      - ./ssl.crt:/run/ssl.crt:ro
      - ./ssl.key:/run/ssl.key:ro
