version: '3.5'

services:
  redis:
    image: redis:3.2

  web:
    image: "mozilla/relops-hardware-controller:<%= @image_tag %>"
    depends_on:
      - redis
    ports:
      - "<%= @port %>:<%= @port %>"
    environment:
      - DJANGO_CONFIGURATION=Prod
    env_file:
      - .env
    command: web

  worker:
    image: "mozilla/relops-hardware-controller:<%= @image_tag %>"
    build:
      context: /opt/rollerdev
    environment:
      - WORKER_CONFIG_PATH=/run/worker_config.json
    env_file:
      - .env
    volumes:
      - ./worker_config.json:/run/worker_config.json:ro
    command: worker
