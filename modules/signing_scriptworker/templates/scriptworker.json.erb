{
    "provisioner_id": "<%= scope["config::signing_scriptworker_provisioner_id"] %>",
    "worker_group": "<%= scope["config::signing_scriptworker_worker_group"] %>",
    "worker_type": "<%= scope["config::signing_scriptworker_worker_type"] %>",
    "worker_id": "<%= @hostname %>",

    "work_dir": "<%= scope["config::signing_scriptworker_root"] %>/work",
    "log_dir": "<%= scope["config::signing_scriptworker_root"] %>/logs",
    "artifact_dir": "<%= scope["config::signing_scriptworker_root"] %>/artifacts",
    "task_log_dir": "<%= scope["config::signing_scriptworker_root"] %>/artifacts/public/logs",
    "git_key_repo_dir": "<%= scope["config::signing_scriptworker_root"] %>/gpg_key_repo",
    "base_gpg_home_dir": "<%= scope["config::signing_scriptworker_root"] %>/gpg",
    "gpg_home": "/home/<%= scope["users::signer::username"] %>/.gnupg",

    "my_email": "<%= scope["config::signer_username"] %>@<%= @fqdn %>",

    "artifact_expiration_hours": <%= scope["config::signing_scriptworker_artifact_expiration_hours"] %>,
    "artifact_upload_timeout": <%= scope["config::signing_scriptworker_artifact_upload_timeout"] %>,

    "task_script": ["<%= scope["config::signing_scriptworker_root"] %>/bin/signingscript", "<%= scope["config::signing_scriptworker_root"] %>/script_config.json" ],
    "task_max_timeout": <%= scope["config::signing_scriptworker_task_max_timeout"] %>,
    "valid_artifact_path_regexes": ["^/v1/task/(?P<taskId>[^/]+)(/runs/\\d+)?/artifacts/(?P<filepath>.*)$"],
    "verify_chain_of_trust": false,
    "sign_chain_of_trust": true,

    "credentials": {
        "clientId": "<%= scope.function_secret(["signing_scriptworker_taskcluster_client_id"]) %>",
        "accessToken": "<%= scope.function_secret(["signing_scriptworker_taskcluster_access_token"]) %>"
    },

    "verbose": <%= scope["config::signing_scriptworker_verbose_logging"] %>
}
